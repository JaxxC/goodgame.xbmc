<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<settings>
    <category label="Login">
        <setting id="login_name" type="text" default="" label="Login"/>
        <setting id="login_password" type="text" default="" label="Password"/>
        <setting label="Очистить Cookies" type="action" action="RunScript(special://home/addons/plugin.video.goodgame/resources/lib/commands.py, delcookies)"/>
