        <setting enable="eq(-4,false)" visible="eq(-4,false)" label="Medium" type="bool" id="q_medium" default="false"/>
        <setting enable="eq(-5,false)" visible="eq(-5,false)" label="High" type="bool" id="q_high" default="false"/>
        <setting enable="eq(-6,false)" visible="eq(-6,false)" label="Source" type="bool" id="q_source" default="false"/>
